<div id="member-card">
  <img src="../images/member-icon.jpg" alt="Member icon" style="width:100%">
  <div class="container">
    <h2><%= @member.full_name %></h2>
    <h3><%=  @member.membership_type%></h3>
  </div>
</div>

<br></br>

<button class="btn btn--edit" onclick="window.location.href='/members/<%= @member.id %>/edit'">Edit</button>

<div id="submit">
    <form action="/members/<%= @member.id %>/delete" method="POST"><input class="btn btn--delete" type="submit" value="Delete"></form>
</div>

<br></br>

<table>
  <tr>
    <th>Classes booked on:</th>
  </tr>
  <td>
    <% @member.group_classes_upcoming.each do |group_class| %>
    <li id="table-li"><%= group_class.class_name %> - <%= group_class.class_date %></li>
    <% end %>
  </td>
</table>

<br></br>

<button class="btn btn--action" onclick="window.location.href='/members/<%= @member.id %>/class_history'">Previous History</button>

<br></br>
