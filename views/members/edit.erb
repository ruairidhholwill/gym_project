<h2>Edit Member</h2>

<form id="member-form" method="post" action="/members/<%= @member.id %>">

  <div>
    <label for="first_name">First Name:</label>
    <input type="text" name="first_name" id="first_name" value = "<%= @member.first_name %>"/>
  </div>

  <div>
    <label for="last_name">Last Name:</label>
    <input type="text" name="last_name" id="last_name" value = "<%= @member.last_name %>"/>
  </div>

  <div>
    <label for="membership_type">Membership:</label>
    <select name="membership_type">
      <option value="Standard" <%= "selected" if @member.membership_type == "Standard" %>>Standard</option>
      <option value="Premium" <%= "selected" if @member.membership_type == "Premium" %>>Premium</option>
    </select>
  </div>

  <div>
    <input class="btn btn--action" type="submit" value="Update">
  </div>

</form>
