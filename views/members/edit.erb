<h2>Edit Member</h2>

<form method="post" action="/members/<%= @member.id %>">

  <label for="first_name">First Name:</label>
  <input type="text" name="first_name" id="first_name" value = "<%= @member.first_name %>"/>

  <label for="last_name">Last Name:</label>
  <input type="text" name="last_name" id="last_name" value = "<%= @member.last_name %>"/>

  <label for="membership_type">Membership:</label>
  <input type="radio" name="membership_type" value="Standard">Standard
  <input type="radio" name="membership_type" value="Premium">Premium

  <input type="submit" value="Update">


</form>
