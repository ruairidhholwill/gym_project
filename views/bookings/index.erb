<h1>Bookings</h1>

<table>
  <tr>
    <th>id</th>
    <th>Member</th>
    <th>Class</th>
  </tr>

  <% for booking in @bookings %>

  <tr>
    <td><a href="/bookings/<%= booking.id %>"><%= booking.id %></a></td>
    <td><a href="/members/<%= booking.member_id %>"><%= booking.member.full_name %></a></td>
    <td><a href="/group_classes/<%= booking.group_class_id %>"><%= booking.group_class.class_name %> - <%= booking.group_class.class_date %></a></td>
  </tr>
  <% end %>
</table>

<br></br>

<div>
  <button class="btn btn--action" onclick="window.location.href='/bookings/new'">New Booking</button>
</div>

<br></br>
