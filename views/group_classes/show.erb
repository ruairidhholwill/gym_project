<div id="member-card">
  <% if @group_class.class_name == "Gymnastics" %>
  <img src="../images/gymnastics-icon.png" alt="Member icon" style="width:100%">
  <% elsif @group_class.class_name == "Weightlifting" %>
  <img src="../images/classes-icon.png" alt="Member icon" style="width:100%">
  <% elsif @group_class.class_name == "HIIT" %>
  <img src="../images/HIIT-icon.png" alt="Member icon" style="width:100%">
  <% end %>
  <div class="container">
    <h2><%= @group_class.class_name %></h2>
    <h3>Details:</h3>
    <h4>Start time: <%= @group_class.start_at %></h4>
    <h4>End time: <%= @group_class.end_at %></h4>
    <h4>Date: <%= @group_class.class_date %></h4>
    <h4>Spaces left: <%= @group_class.remaining_spaces %></h4>
  </div>
</div>

<br></br>

<button class="btn btn--edit" onclick="window.location.href='/group_classes/<%= @group_class.id %>/edit'" >Edit</button>

<div id="submit">
<form action="/group_classes/<%= @group_class.id %>/delete" method="post">
  <input class="btn btn--delete" type="submit" value="Delete">
</form>
</div>

<br></br>

<table>
  <tr>
    <th>Members booked in:</th>
  </tr>
  <td>
    <% @group_class.members.each do |member| %>
    <li id="table-li"><%= member.full_name %></li>
    <% end %>
  </td>
</table>

<br></br>
