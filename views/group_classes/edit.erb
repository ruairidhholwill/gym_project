<h1>Edit workout </h1>

<form action="/group_classes/<%= @group_class.id %>" method="post">

  <label for="class_name">Class type:</label>
  <select name="class_name">
    <option value="HIIT" <%= "selected" if @group_class.class_name == "HIIT" %>>HIIT</option>
    <option value="Gymnastics" <%= "selected" if @group_class.class_name == "Gymnastics" %>>Gymnastics</option>
    <option value="Weightlifting" <%= "selected" if @group_class.class_name == "Weightlifting" %>>Weightlifting</option>
  </select>

  <label for="capacity">Capacity:</label>
  <select name="capacity">
    <option value=10 <%= "selected" if @group_class.capacity == 10 %>>10</option>
    <option value=15 <%= "selected" if @group_class.capacity == 15 %>>15</option>
    <option value=20 <%= "selected" if @group_class.capacity == 20 %>>20</option>
  </select>

  <label for="start_at">Start time:</label>
  <select name="start_at">
    <option value="09:00" <%= "selected" if @group_class.start_at == "09:00" %>>09:00</option>
    <option value="10:00" <%= "selected" if @group_class.start_at == "10:00" %>>10:00</option>
    <option value="11:00" <%= "selected" if @group_class.start_at == "11:00" %>>11:00</option>
    <option value="12:00" <%= "selected" if @group_class.start_at == "12:00" %>>12:00</option>
    <option value="13:00" <%= "selected" if @group_class.start_at == "13:00" %>>13:00</option>
    <option value="14:00" <%= "selected" if @group_class.start_at == "14:00" %>>14:00</option>
    <option value="15:00" <%= "selected" if @group_class.start_at == "15:00" %>>15:00</option>
    <option value="16:00" <%= "selected" if @group_class.start_at == "16:00" %>>16:00</option>
  </select>

  <label for="end_at">End time:</label>
  <select name="end_at">
    <option value="10:00" <%= "selected" if @group_class.end_at == "10:00" %>>10:00</option>
    <option value="11:00" <%= "selected" if @group_class.end_at == "11:00" %>>11:00</option>
    <option value="12:00" <%= "selected" if @group_class.end_at == "12:00" %>>12:00</option>
    <option value="13:00" <%= "selected" if @group_class.end_at == "13:00" %>>13:00</option>
    <option value="14:00" <%= "selected" if @group_class.end_at == "14:00" %>>14:00</option>
    <option value="15:00" <%= "selected" if @group_class.end_at == "15:00" %>>15:00</option>
    <option value="16:00" <%= "selected" if @group_class.end_at == "16:00" %>>16:00</option>
    <option value="17:00" <%= "selected" if @group_class.end_at == "17:00" %>>17:00</option>
  </select>

  <label for="class_date">Date:</label>
  <input type="date" name="class_date" value="<%= @group_class.class_date %>">

  <input type="submit" value="Update">

</form>
