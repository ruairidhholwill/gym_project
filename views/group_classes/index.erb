<h1>Classes Available:</h1>

<table>
  <tr>
    <th>id</th>
    <th>Class</th>
    <th>Capacity</th>
    <th>Start Time</th>
    <th>End Time</th>
    <th>Date</th>
  </tr>

  <% for group_class in @group_classes %>

  <tr>
    <td><a href="/group_classes/<%= group_class.id %>"><%= group_class.id %></a></td>
    <td><%= group_class.class_name %></td>
    <td><%= group_class.capacity%></td>
    <td><%= group_class.start_at %></td>
    <td><%= group_class.end_at %></td>
    <td><%= group_class.class_date %></td>
  </tr>
  <% end %>
</table>

<button onclick="window.location.href='/group_classes/new'">Add New Class</button>
