<h1>Upcoming Classes:</h1>

<table>
  <tr>
    <th id="main-header" colspan="5"><%= Date.today %></th>
  </tr>
  <tr>
    <th>id</th>
    <th>Class</th>
    <th>Capacity</th>
    <th>Start Time</th>
    <th>End Time</th>
  </tr>

  <% for group_class in @group_classes %>
  <% if group_class.date_today == group_class.class_date %>
  <tr>
    <td><a href="/group_classes/<%= group_class.id %>"><%= group_class.id %></a></td>
    <td><%= group_class.class_name %></td>
    <td><%= group_class.capacity%></td>
    <td><%= group_class.start_at %></td>
